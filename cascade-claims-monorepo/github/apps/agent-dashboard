import React, { useEffect, useState } from 'react';
import { format } from 'date-fns';

interface ClaimEvent {
  id: string;
  customerName: string;
  carrier: 'GEICO' | 'State Farm' | 'Progressive';
  status: 'SECURED' | 'PROCESSING' | 'FAILED';
  time: Date;
}

export const LiveFeed = () => {
  const [events, setEvents] = useState<ClaimEvent[]>([]);

  // Simulate live socket connection to the bots
  useEffect(() => {
    const socket = new WebSocket('ws://localhost:8080/feed');
    socket.onmessage = (event) => {
      const newClaim = JSON.parse(event.data);
      setEvents((prev) => [newClaim, ...prev]);
    };
    return () => socket.close();
  }, []);

  return (
    <div className="bg-white rounded-xl shadow-2xl border border-gray-100 overflow-hidden">
      <div className="p-6 border-b border-gray-100 bg-gray-50 flex justify-between items-center">
        <h2 className="text-xl font-bold text-gray-800 flex items-center">
          <span className="w-3 h-3 bg-green-500 rounded-full animate-pulse mr-3"></span>
          Live Bypass Feed
        </h2>
        <span className="text-xs font-mono text-gray-400">CONNECT_STATUS: ACTIVE</span>
      </div>

      <div className="divide-y divide-gray-100">
        {events.length === 0 ? (
          <div className="p-8 text-center text-gray-400">Waiting for claims...</div>
        ) : (
          events.map((evt) => (
            <div key={evt.id} className="p-4 hover:bg-blue-50 transition-colors flex justify-between items-center group">
              <div className="flex items-center space-x-4">
                <div className={`p-2 rounded-lg ${
                  evt.status === 'SECURED' ? 'bg-green-100 text-green-700' : 
                  evt.status === 'FAILED' ? 'bg-red-100 text-red-700' : 'bg-yellow-100 text-yellow-700'
                }`}>
                  {evt.status === 'SECURED' ? 'üõ°Ô∏è' : '‚ö†Ô∏è'}
                </div>
                <div>
                  <p className="font-bold text-gray-900">{evt.customerName}</p>
                  <p className="text-xs text-gray-500 uppercase tracking-wide">{evt.carrier} ‚Ä¢ BYPASS PROTOCOL</p>
                </div>
              </div>
              <div className="text-right">
                <p className="text-sm font-bold text-gray-900">{format(evt.time, 'HH:mm:ss')}</p>
                <button className="text-xs text-blue-600 opacity-0 group-hover:opacity-100 font-medium">View Audit Log</button>
              </div>
            </div>
          ))
        )}
      </div>
    </div>
  );
};
